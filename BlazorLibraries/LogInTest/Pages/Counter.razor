@page "/counter"
@attribute [Authorize(Roles = "Admin, DataProvider")]
    <AuthorizeView Roles="Admin, DataProvider">
        <Authorized>
            <h1>Counter</h1>

            <p>Current count: @currentCount</p>
            <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
        </Authorized>
        <NotAuthorized>
            
        </NotAuthorized>
    </AuthorizeView>

    @code {
        private int currentCount = 0;

        private void IncrementCount()
        {
            currentCount++;
        }
    }
